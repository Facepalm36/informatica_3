#include<stdio.h>
#include<stdib.h>
 int main(){
	    int N;
	    int I;
	    int Num;
	    int Somma;
	    float Media;
	    printf("Inserire quanti numeri si vuole:");
	    scanf("%d",&N);
	    Somma=0;
		I=0;
		while(I<N){
			        printf("Inserire numero:");
			        scanf("%d",&Num);
			        Somma=Somma+Num;
			        I++;
		          }
	    Media=Somma/N;
	    printf("La media e':%f",Media);
	}
